<Window x:Class="HilfsArtikelApp_01.ArtikelFenster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Artikel" Height="400" Width="400">
    <Grid Margin="10">
        <TextBlock Text="Artikel hinzufügen" FontSize="20" FontWeight="Bold" Margin="10,10,10,0"/>
        <Button Content="Medizinische Handschuhe" Width="200" Height="40" VerticalAlignment="Top" Margin="10,50,0,0" Click="AddHandschuhe_Click"/>
        <Button Content="Desinfektionsmittel" Width="200" Height="40" VerticalAlignment="Top" Margin="10,100,0,0" Click="AddDesinfektionsmittel_Click"/>
        <Button Content="Unterlagen" Width="200" Height="40" VerticalAlignment="Top" Margin="10,150,0,0" Click="AddUnterlagen_Click"/>
        <Button Content="Windeln" Width="200" Height="40" VerticalAlignment="Top" Margin="10,200,0,0" Click="AddWindeln_Click"/>
        <Button Content="Wundschutzcreme" Width="200" Height="40" VerticalAlignment="Top" Margin="10,250,0,0" Click="AddWundschutzcreme_Click"/>
        <Button Content="Warenkorb anzeigen" Width="200" Height="40" VerticalAlignment="Top" Margin="10,300,0,0" Click="ShowWarenkorb_Click"/>
    </Grid>
</Window>
