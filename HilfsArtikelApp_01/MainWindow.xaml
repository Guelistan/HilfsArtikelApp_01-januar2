<Window x:Class="HilfsArtikelApp_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pflege Artikel App" Height="400" Width="400">
    <Grid Margin="10">
        <Button Content="Registrieren" Width="200" Height="40" VerticalAlignment="Top" Margin="10,10,0,0" Click="RegistrierenButton_Click"/>
        <Grid>
            <TextBox x:Name="EmailTextBox" Width="300" Margin="10,60,0,0" VerticalAlignment="Top"/>
            <TextBlock x:Name="EmailPlaceholder" Text="Email" Foreground="Gray" VerticalAlignment="Top" Margin="14,74,0,0" IsHitTestVisible="False"/>
        </Grid>
        <Grid>
            <PasswordBox x:Name="PasswortBox" Width="300" Margin="10,110,0,0" VerticalAlignment="Top"/>
            <TextBlock x:Name="PasswordPlaceholder" Text="Passwort" Foreground="Gray" VerticalAlignment="Top" Margin="14,124,0,0" IsHitTestVisible="False"/>
        </Grid>
        <Button Content="Anmelden" Width="200" Height="40" VerticalAlignment="Top" Margin="10,160,0,0" Click="AnmeldenButton_Click"/>
        <Button Content="Gastzugang" Width="200" Height="40" VerticalAlignment="Top" Margin="10,210,0,0" Click="GastzugangButton_Click"/>
        <TextBlock Name="FehlermeldungTextBlock" Margin="10,260,0,0" Foreground="Red"/>
    </Grid>
</Window>
