<Window x:Class = "HilfsArtikelApp_01.Registrierung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
        Title = "Registrierung" Height = "600" Width = "400" >
    <Grid Margin = "10" >
        <TextBlock Text = "Registrierung" FontSize = "20" FontWeight = "Bold" Margin = "10,10,10,0"/>
        <Grid >
            <TextBox x:Name = "NameTextBox" Width = "300" Margin = "10,50,0,0" VerticalAlignment = "Top"/>
            <TextBlock x:Name = "NamePlaceholder" Text = "Name" Foreground = "Gray" VerticalAlignment = "Top" Margin = "14,64,0,0" IsHitTestVisible = "False"/>
        </Grid>
        <Grid>
            <TextBox x:Name = "VornameTextBox" Width = "300" Margin = "10,100,0,0" VerticalAlignment = "Top"/>
            <TextBlock x:Name = "VornamePlaceholder" Text = "Vorname" Foreground = "Gray" VerticalAlignment = "Top" Margin = "14,114,0,0" IsHitTestVisible = "False"/>
        </Grid>
        <Grid>
            <TextBox x:Name = "EmailTextBox" Width = "300" Margin = "10,150,0,0" VerticalAlignment = "Top" />
            <TextBlock x:Name = "EmailPlaceholder" Text = "Email" Foreground = "Gray" VerticalAlignment = "Top" Margin = "14,164,0,0" IsHitTestVisible = "False"/>
        </Grid>
        <Grid >
            <PasswordBox x:Name = "PasswortTextBox" Width = "300" Margin = "10,200,0,0" VerticalAlignment = "Top" />
            <TextBlock x:Name = "PasswortPlaceholder" Text = "Passwort" Foreground = "Gray" VerticalAlignment = "Top" Margin = "14,214,0,0" IsHitTestVisible = "False"/>
        </Grid>
        <Grid >
            <TextBox x:Name = "AdresseTextBox" Width = "300" Margin = "10,250,0,0" VerticalAlignment = "Top"/>
            <TextBlock x:Name = "AdressePlaceholder" Text = "Adresse" Foreground = "Gray" VerticalAlignment = "Top" Margin = "14,264,0,0" IsHitTestVisible = "False"/>
        </Grid>
        <Grid >
            <TextBox x:Name = "StrasseTextBox" Width = "300" Margin = "10,300,0,0" VerticalAlignment = "Top" />
            <TextBlock x:Name = "StrassePlaceholder" Text = "Straße" Foreground = "Gray" VerticalAlignment = "Top" Margin = "14,314,0,0" IsHitTestVisible = "False"/>
        </Grid>
        <Grid >
            <TextBox x:Name = "PLZTextBox" Width = "300" Margin = "10,350,0,0" VerticalAlignment = "Top"/>
            <TextBlock x:Name = "PLZPlaceholder" Text = "Postleitzahl" Foreground = "Gray" VerticalAlignment = "Top" Margin = "14,364,0,0" IsHitTestVisible = "False"/>
        </Grid>
        <Grid >
            <TextBox x:Name = "TelefonnummerTextBox" Width = "300" Margin = "10,400,0,0" VerticalAlignment = "Top"/>
            <TextBlock x:Name = "TelefonnummerPlaceholder" Text = "Telefonnummer" Foreground = "Gray" VerticalAlignment = "Top" Margin = "14,414,0,0" IsHitTestVisible = "False"/>
        </Grid >
        <Grid>
            <ComboBox x:Name = "BezahloptionComboBox" Width = "300" Margin = "10,450,0,0" VerticalAlignment = "Top">
                <ComboBoxItem Content = "Bezahlen auf Rechnung"/>
                <ComboBoxItem Content = "Gastzugang"/>
            </ComboBox>
        </Grid>
        <Button Content = "Registrieren" Width = "150" Height = "40" VerticalAlignment = "Top" Margin = "10,500,0,0" Click = "RegistrierenButton_Click"/>
        <Button x:Name = "BestaetigenButton" Content = "Bestätigen" Width = "150" Height = "40" VerticalAlignment = "Top" Margin = "200,500,0,0" Click="BestaetigenButton_Click" Visibility = "Hidden"/>
    </Grid>
</Window>
 